@model SYBD.Db.Models.Photo

@{
    ViewData["Title"] = "Update photo";
}
<div class="text-center">
    <h2 class="display-4">Update photo</h2>
</div>

﻿<form class="container-fluid" style="max-width: 580px;" asp-action="UpdatePhoto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Photographer
            </label>
            <div class="col-lg-8">
                <select name="photographerid" class="form-control" asp-items="@(new SelectList(@ViewBag.Photographers,"Id", "Name", Model.Photographerid))"></select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-4">
                Date
            </label>
            <div class="col-lg-8">
                <input asp-for="Photodate" type="date" name="photodate" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Quality
            </label>
            <div class="col-lg-8">
                <input asp-for="Quality" type="text" name="quality" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Rating
            </label>
            <div class="col-lg-8">
                <input asp-for="Rating" type="number" name="rating" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Price
            </label>
            <div class="col-lg-8">
                <input asp-for="Price" type="text" step="0.01" name="price" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Genre
            </label>
            <div class="col-lg-8">
                <select name="genreid" class="form-control" asp-items="@(new SelectList(@ViewBag.Genres,"Id", "Name", Model.Genreid))"></select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Update
            </button>
        </div>
    </div>
</form>
