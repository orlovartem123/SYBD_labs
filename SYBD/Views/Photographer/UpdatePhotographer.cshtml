@using SYBD.Db.Models
@model Photographer
@{
    ViewData["Title"] = "Update photographer";
}

<div class="text-center">
    <h2 class="display-4">Update photographer</h2>
</div>

﻿<form class="container-fluid" style="max-width: 580px;" asp-action="UpdatePhotographer">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-4">
                Photographer name
            </label>
            <div class="col-lg-8">
                <input asp-for="Name" type="text" name="name" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Photographer age
            </label>
            <div class="col-lg-8">
                <input asp-for="Age" type="number" name="age" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Photographer status
            </label>
            <div class="col-lg-8">
                <input asp-for="Status" type="text" name="status" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Update
            </button>
        </div>
    </div>
</form>