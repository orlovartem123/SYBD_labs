@model SYBD.Db.Models.Sale

@{
    ViewData["Title"] = "Create sale";
}
<div class="text-center">
    <h2 class="display-4">Create sale</h2>
</div>

﻿<form class="container-fluid" style="max-width: 580px;" asp-action="CreateSale">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Stock
            </label>
            <div class="col-lg-8">
                <select name="stockid" class="form-control" asp-items="@(new SelectList(@ViewBag.Stocks,"Id", "Address"))"></select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-4">
                Sold date
            </label>
            <div class="col-lg-8">
                <input asp-for="Solddate" type="date" name="solddate" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Photo
            </label>
            <div class="col-lg-8">
                <select name="photoid" class="form-control" asp-items="@(new SelectList(@ViewBag.Photos,"Id", "Id"))"></select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Count
            </label>
            <div class="col-lg-8">
                <input asp-for="Count" type="number" name="count" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Create
            </button>
        </div>
    </div>
</form>
