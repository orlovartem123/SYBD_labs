<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SYBD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SYBD</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="nav nav-tabs">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Photographers</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Photographer" asp-action="CreatePhotographer">Create</a>
                            <a class="dropdown-item" asp-controller="Photographer" asp-action="StartTestPhotographer">Test</a>
                            <a class="dropdown-item" asp-controller="Photographer" asp-action="PhotographerList">Show photographers</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Genres</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Genre" asp-action="CreateGenre">Create</a>
                            <a class="dropdown-item" asp-controller="Genre" asp-action="GenreList">Show genres</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Photos</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Photo" asp-action="CreatePhoto">Create</a>
                            <a class="dropdown-item" asp-controller="Photo" asp-action="PhotoList">Show photos</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Incomes</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Income" asp-action="CreateIncome">Create</a>
                            <a class="dropdown-item" asp-controller="Income" asp-action="IncomeList">Show incomes</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Sales</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Sale" asp-action="CreateSale">Create</a>
                            <a class="dropdown-item" asp-controller="Sale" asp-action="SaleList">Show sales</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Stocks</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Stock" asp-action="CreateStock">Create</a>
                            <a class="dropdown-item" asp-controller="Stock" asp-action="StocksWorkload">Workload of stocks</a>
                            <a class="dropdown-item" asp-controller="Stock" asp-action="StockList">Show stocks</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SYBD - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
